.SideBar
  .SideBar__Header
    .SideBar__Header--SideItem
      = current_user.name
      .SideBar__Header--SideItem--SideIcon
        = link_to new_group_path, method: :get, class: "icon__btnA" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user), class: "icon__btnB" do
          = icon('fas', 'cog')
  .SideBar__Group
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .SideBar__Group--GroupName
          = group.name
        .SideBar__Group--NewMessage
          = group.show_last_message